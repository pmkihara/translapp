              <% if translation_service.remote %>
                <i class="fas fa-laptop-house"></i>
              <% end %>
            </div>
            <div class="card-trip-infos">
              <div>
                <h2><%= translation_service.original_language %> > <%= translation_service.final_language %></h2>
                <p><%= translation_service.description %></p>
              </div>
              <h2 class="card-trip-pricing">Â£<%= translation_service.price_per_hour %></h2>
              <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
            </div>
          <% end %>
        </div>

      </div>

    <% end %>

  </div>

</div>
