<div class="container">

  <div class="row">

    <% @translation_services.each do |translation_service| %>

      <% translation_service.description = "Lorem ipsum dolor asit amet"  %>
      <% translation_service.price_per_hour = 25.0  %>
      <% translation_service.remote = true  %>

      <div class="col-4">

        <div class="card-trip">
          <%= link_to translation_service_path(translation_service) do %>
